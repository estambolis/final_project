<!-- Validation failure messages -->

<% if @restaurant.errors.any? %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->
<hr>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Restaurant</h3>
      </div>
      <div class="panel-body">
        <form action="/update_restaurant/<%= @restaurant.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for venue_name -->
          <div class="form-group">
            <label for="venue_name" class="col-sm-2 control-label">
              Venue name
            </label>
            <div class="col-sm-10">
              <input type="text" id="venue_name" name="venue_name" placeholder="Venue name" class="form-control" value="<%= @restaurant.venue_name %>">
            </div>
            </div>

            <div class="form-group">

            <label for="address" class="col-sm-2 control-label">
              Type
            </label>

            <div class="col-sm-10">
              <input type="text" id="food_type" name="food_type" placeholder="Food Type" class="form-control" value="<%= @restaurant.food_type %>">
            </div>

            </div>

            <div class="form-group">

            <label for="address" class="col-sm-2 control-label">
              Address
            </label>

            <div class="col-sm-10">
              <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @restaurant.address %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Restaurant
              </button>
              or
              <a href="/restaurants/<%= @restaurant.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
