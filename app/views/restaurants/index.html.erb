<div class="page-header">
  <h1>
    Restaurants
  </h1>
</div>


<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Restaurants (type name or rating)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
  <% @restaurants.each do |restaurant| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"> <%= restaurant.venue_name %></h3>
      </div>
      <div class="panel-body">
        <dl>

        <% if current_user != nil %>

          <dt>Average Rating</dt>
          <%  venue = @experiences.where :restaurant_id => restaurant.id
          rating = venue.pluck(:rating)
          sum = rating.sum.to_f
          @total = rating.count
          @avg = (sum/@total).round(2) %>
          <dd><%= @avg %> (<%= @total %> reviews) </dd>

            <dt>Your Average</dt>
          <%
          venue = @experiences.where :user_id => current_user.id, :restaurant_id => restaurant.id
          rating = venue.pluck(:rating)
          sum = rating.sum.to_f
          total = rating.count %>
            <% if total > 0
          @avg2 = (sum/total).round(2)
              else
          @avg2 = "None"
            end%>


          <dd><%= @avg2 %> </dd>

          <% else %>

             <dt>Average Rating</dt>
          <%  venue = @experiences.where :restaurant_id => restaurant.id
          rating = venue.pluck(:rating)
          sum = rating.sum.to_f
          @total = rating.count
          @avg = (sum/@total).round(2) %>
          <dd><%= @avg %> (<%= @total %> reviews) </dd>

          <% end %>




        </dl>
        <div class="btn-group btn-group-justified">
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>

          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <% if restaurant.experiences.count == 0 %>

           <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger">
            <i class="fa fa-trash"></i>
          </a>

          <%else %>


          <%end %>

        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
