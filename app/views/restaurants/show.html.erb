<!-- Responsive panel example-->
<hr>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @restaurant.venue_name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Type</dt>
              <dd><%= @restaurant.food_type %></dd>
              <hr>
              <dt>Address</dt>
              <dd><%= @restaurant.address %> </dd>
              <dd><%= @restaurant.city %> <%= @restaurant.state %></dd>


            </dl>

            <%if @restaurant.address == "Unavailable" %>
              <hr>
              <% else %>
            <div id="map-canvas"></div>
            <% end %>

            <div class="btn-group btn-group-justified">
              <a href="/restaurants" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



</div>


<!-- End responsive panel example -->
