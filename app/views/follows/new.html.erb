<!-- Validation failure messages -->

<% if @follow.errors.any? %>
  <% @follow.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->
<br>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Follow someone new</h3>
      </div>
      <div class="panel-body">
        <form action="/create_follow" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">


          <!-- Label and input for receiver_id -->
          <div class="form-group">
            <label for="receiver_id" class="col-sm-2 control-label">
              Receiver
            </label>
            <div class="col-sm-10">
            <%= select_tag :receiver_id, options_from_collection_for_select(User.where.not(id: current_user.id), :id, :username, @follow.receiver_id), :class => "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Start following
              </button>
              or
              <a href="/follows">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
